<div class="container">
  <h3 class="text-center"><strong>Editar datos </strong></h3>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, autofocus: true %>
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>

    <div class="field">
      <%= f.label :address %>
      <%= f.text_field :address %>
    </div>

    <div class="field">
      <%= f.label :phone %>
      <%= f.text_field :phone %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password %> <i>(déjalo en blanco si no quieres cambiarlo)</i>
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        
        <em>minimo <%= @minimum_password_length %> caracteres</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Confirmar password" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :current_password, 'Password actual' %> 
      <i>
        (Necesitamos su contraseña actual para confirmar sus cambios)
      </i>
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div><br>

    <div class="actions">
      <%= f.submit "Editar" %>
    </div>
  <% end %>

  <h1><strong>Cancelar mi cuenta</strong></h1>
  <%= button_to "Cancelar cuenta", registration_path(resource_name), data: { confirm: "Estas seguro" }, method: :delete %>

  <%= link_to "Volver", perfil_driver_path, class:"button alt" %>
</div>