<div class="container">
  <h1 class="text-center"><strong>SOLICITUDES</strong></h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Driver</th>
        <th>Statement</th>
        <th>Starting point</th>
        <th>End point</th>
        <th>Order description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @requests.each do |request| %>
        <tr>
          <td><%= request.user.name %></td>
          <td><%= request.driver%></td>
          <td><%= request.statement %></td>
          <td><%= request.starting_point %></td>
          <td><%= request.end_point %></td>
          <td><%= request.order_description %></td>
          <td><%= link_to 'Show', request %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td><%= link_to 'Cancelar', request, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Ingresar nueva solicitud', new_request_path %>
</div>
