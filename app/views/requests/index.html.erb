<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Driver</th>
      <th>Payment</th>
      <th>Store</th>
      <th>Statement</th>
      <th>Starting point</th>
      <th>End point</th>
      <th>Order description</th>
      <th>Paid</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.user.name %></td>
        <td><%= request.driver%></td>
        <td><%= request.payment %></td>
        <td><%= request.store %></td>
        <td><%= request.statement %></td>
        <td><%= request.starting_point %></td>
        <td><%= request.end_point %></td>
        <td><%= request.order_description %></td>
        <td><%= request.paid %></td>
        <td><%= request.price %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Request', new_request_path %>
